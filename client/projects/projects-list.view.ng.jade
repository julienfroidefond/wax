.projects-list.container
  h1 
    | Les projets 
    small du Wax 2015
  
  form(ng-submit='save()', name='form', novalidate='')
    div(ng-if="$auth.currentUser")
      br
      br
      p.input-group
        input.form-control(type='text', placeholder='Nom', ng-model='newProject.name')
        span.input-group-btn
          input.btn.btn-primary(type='submit', value='Ajouter')
    hr
    .input-group.col-md-4.col-md-offset-8
      input.form-control(type='search', ng-model='searchText', placeholder='Rechercher')
      .dropdown.input-group-btn(dropdown='', on-toggle='toggled(open)')
        button.btn.btn-primary.dropdown-toggle(dropdown-toggle='') {{ orderProperty==='1' ? 'Ascendant' : 'Descendant' }}
          span.caret
        ul.dropdown-menu(role='menu')
          li(ng-click="orderProperty='1'") Ascendant
          li(ng-click="orderProperty='-1'") Descendant
  
  br
        
  p(class="alert alert-info", ng-if="projectParticipe[0]._id") 
      | Je participe au projet : 
      a(href='/projects/{{projectParticipe[0]._id}}') {{ projectParticipeTo.name }} 
  .row.project-list
    .col-xs-12.col-sm-4.col-md-4.repeat-animation(dir-paginate='project in projects | itemsPerPage: perPage', total-items='projectsCount',  current-page='page')
      .card
        .box-icon-container(ng-if="nbLikes(project)>0")
          .box-icon
            .heart
              i.fa.fa-heart
            span.text {{nbLikes(project)}}
        .image
          a(href='/projects/{{project._id}}')
            img.img-responsive.project-image(ng-src='{{project.mainImageUrl}}')
          .hover-content
            .centered
              liker(project="project", ng-if='$auth.currentUser', css-classes="btn btn-primary btn-lg")
            .bottom
              avatar(user='ownerObject', width='40', style="display:inline")
              .pull-right
                a.btn.btn-link.btn-sm(ng-if='project.hasRights', href='/projects/{{project._id}}', tooltip="Editer")
                  i.fa.fa-pencil
                a.btn.btn-link.btn-sm(ng-if='project.hasRights', ng-click='remove(project)', tooltip="Supprimer")
                  i.fa.fa-trash
          //- .pull-right {{projectCreatedDate(project.createdAt)}}
        .content
          .title
            a(href='/projects/{{project._id}}') 
              h2 {{ project.name }}
          .desc(ng-bind-html="getHtml(project.description)")
        .content
          .avatars(ng-if="project.participantsObject")
            avatar(user='project.ownerObject', width='40', imageonly="true", style="display:inline")
            avatar(user='participantsObject', width='40', imageonly="true", style="display:inline", ng-repeat="particip in project.participants")
          .avatars(ng-if="!project.participantsObject")
            avatar(user='project.ownerObject', width='40', imageonly="true", style="display:inline")
        .content
          a.btn.btn-block.btn-warning(href='/projects/{{project._id}}', ng-if='project.hasRights') Editer
          a.btn.btn-block.btn-default(href='/projects/{{project._id}}', ng-if='!project.hasRights') En savoir plus
          
                
    dir-pagination-controls.col-md-12(on-page-change='pageChanged(newPageNumber)')
  hr
  p Nombre de projets: {{projectsCount}}
