.main.container
    div(ng-hide="$root.currentUser")
    .col-md-4.col-md-offset-4
        .panel.panel-default
            .panel-heading
                h3.panel-title
                strong Se connecter
            .panel-body
                .alert.alert-warning(ng-show="error") Erreur : {{error}}
                form(role='form')
                    .form-group
                        label(for='exampleInputEmail1') Email
                        input#exampleInputEmail1.form-control(type='email', placeholder='Enter email', ng-model="credentials.email")
                    .form-group
                        label(for='exampleInputPassword1')
                            | Mot de passe 
                            a(href='#', ng-click="reset()") (mot de passe oubli√©)
                        input#exampleInputPassword1.form-control(type='password', placeholder='Password', ng-model="credentials.password")
                    button.btn.btn-sm.btn-default(ng-click="register()",type='submit') S'enregistrer
                    button.btn.btn-sm.btn-primary.pull-right(ng-click="login()",type='submit') Se connecter
        
    div(ng-show="$root.currentUser")
        h1 Logout
        p
            a(ng-click="logout()", ng-show="$root.currentUser") Logout
